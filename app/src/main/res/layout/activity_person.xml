<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PersonActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_above="@id/ad_view"
        android:layout_height="fill_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="parallax"
                android:id="@+id/poster_layout">
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/person_images"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/person_images"
                    android:background="#6B728E"
                    android:layout_height="110dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/summary_layout"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/poster"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#EFEFEF"
                        style="@style/Toolbar_media_title_appearance"
                        android:id="@+id/title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="2dp"
                        android:textStyle="normal"
                        android:textColor="#EFEFEF"
                        style="@style/Toolbar_media_subtitle_appearance"
                        android:textSize="15dp"
                        android:id="@+id/genre"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:background="@drawable/placeholder"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:transitionName="fade"
                    android:id="@+id/poster"/>
            </RelativeLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="pin"
                app:tabIndicatorColor="#f7fbfc"
                app:tabIndicatorHeight="1.5sp"
                app:tabTextColor="#d6e6f2"
                app:tabSelectedTextColor="#f7fbfc"
                app:tabMode="fixed"
                android:layout_height="50dp"
                android:gravity="bottom"
                android:id="@+id/tabs">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="INFO"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="MOVIES"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:text="TV SHOWS"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.tabs.TabLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/scroller"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:id="@+id/info_layout"
                    android:paddingBottom="20dp"
                    style="@style/sections_layout_appearance"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/sections_text_appearance"
                        android:layout_below="@id/poster_layout"
                        android:textStyle="normal"
                        android:text="BIO"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/poster_layout"
                        android:textStyle="normal"
                        android:textSize="14dp"
                        android:id="@+id/overview" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:id="@+id/movie_layout"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="5dp"
                    style="@style/sections_layout_appearance"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/sections_text_appearance"
                        android:layout_below="@id/poster_layout"
                        android:textStyle="normal"
                        android:text="Movies"
                        android:textSize="20dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/overview"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/movies"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:id="@+id/tv_layout"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="5dp"
                    style="@style/sections_layout_appearance"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/sections_text_appearance"
                        android:layout_below="@id/poster_layout"
                        android:textStyle="normal"
                        android:text="TV Shows"
                        android:textSize="20dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/overview"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tv_shows"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"
        />
</RelativeLayout>