<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieLand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MovieLand.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieLand.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieLand.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Toolbar_title_appearance">
        <item name="android:fontFamily">@font/spicyrice_regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Toolbar_media_title_appearance">
        <item name="android:fontFamily">@font/anton_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Toolbar_media_subtitle_appearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="sections_layout_appearance">
        <item name="android:background">@color/relative_sections</item>
        <item name="android:layout_marginBottom">1sp</item>
        <item name="android:elevation">50sp</item>
    </style>

    <style name="sections_text_appearance">
        <item name="android:fontFamily">@font/anton_regular</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textColor">#52616b</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>